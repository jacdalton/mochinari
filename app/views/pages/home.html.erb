<div class="container-fluid">
  <div class="row">
    <div class="col-4">
      <div class="feature-card" style="background-image: url('<%= asset_path 'namadora.jpg' %>')">
        Popular
      </div>
    </div>
    <div class="col-4">
      <div class="feature-card" style="background-image: url('<%= asset_path 'namadora.jpg' %>')">
        Seasonal
      </div>
    </div>
    <div class="col-4">
      <div class="feature-card" style="background-image: url('<%= asset_path 'namadora.jpg' %>')">
        New
      </div>
    </div>
  </div>
  <div class="row">
    <div class="search-snacks">
      <%= simple_form_for :search, url: snacks_path, method: "GET", html: { class: 'form-inline' } do |f| %>
        <%= f.input :query, input_html: { value: ""}, placeholder: "Search...", name: "search", label: false %>
        <%= f.submit "Search", class: "btn btn-mochi" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <h3>Popular Tags</h3>
      <% @tags.each do |tag| %>
        <div class="tag">
          <p><%= tag.name %></p>
        </div>
      <% end %>
    </div>
  </div>
  <h3>Yummy Categories</h3>
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-6">
        <%= link_to category_path(category) do %>
        <div class="individual-category-card" style="background-image: url('<%= asset_path category.image_path %>'); " >
          <%= link_to category.name.upcase, category_path(category) %>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <h3 >Popular Snacks</h3>
  <div class="row">
    <% @snacks.each do |snack| %>
      <div class="snack-index-card">
        <%= link_to snack_path(snack) do %>
        <%= image_tag 'mikan.jpeg' %>
        <% end %>
        <div class="snack-index-card-infos">
          <div>
            <h3 class="info">Snack Index </h3>
            <div class="stars">
              <% (snack.avg_snack_stars).times do %>
                <i class="fas fa-star"></i>
              <% end %>
              <% (1 - snack.avg_snack_stars).times do %>
                <i class="far fa-star"></i>
              <% end %>
            </div>
          </div>
          <%= image_tag("bobby", :alt=> "bananadeer", class: "bobby") %>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
