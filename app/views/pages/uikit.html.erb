<div class="category-card">
  <div class="row">
    <div class="col-12 col-lg-4">
      <%= image_tag '#' @categories.name %>
    </div>
  </div>
</div>


<div class="feature-cards">
  <div class="feature-card">
   <div class="row">
     <div class="col-4 col-lg-2">
       <%= image_tag '#' @featured_item.name %>
     </div>
   </div>
  </div>
</div>


<div class="snack-index-card">
  <div class="row">
     <div class="col-6 col-lg-2">
        <%= image_tag '#' %>
        <div class="snack-container">
          <%= @snack.title %>
          <%= @rating %>
        </div>
    </div>
  </div>
</div>

<div class="tag">
  <div class="row">
    <%= @tag.name %>
  </div>
</div>

