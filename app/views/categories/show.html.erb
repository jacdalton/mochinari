<div class="container">
  <div class="col">
    <h2>
      <%= @category.name %>
    </h2>
    <p>
      <%= @category.description  %>
    </p>
    <div class="tag-container center">
      <div class="tag">
        <p>chewy</p>
      </div>
      <div class="tag">
        <p>creamy</p>
      </div>
      <div class="tag">
        <p>sweet</p>
      </div>
    </div>
    <%= link_to "Back", categories_path %>
    <h3>Examples of <%= @category.name %></h3>
    <div class="row justify-content-center">
      <% @category.snacks.each do |snack| %>
        <div class="snack-index-card-2">
          <div class="snack-index-card-2-image">
            <%= image_tag snack.snack_images[0].image_path %>
          </div>
          <div class="snack-index-sub-card-2">
            <div class="sub-title mt-3">
              <h4> <%= snack.name %> </h4>
            </div>
            <div class="bottom-info">
              <div class="stars">
                <% if snack.avg_snack_stars == 0 %>
                  No ratings yet!
                <% else %>
                  <% (snack.avg_snack_stars).times do %>
                    <i class="fas fa-star"></i>
                  <% end %>
                  <% (5 - snack.avg_snack_stars).times do %>
                    <i class="far fa-star"></i>
                  <% end %>
                <% end %>
              </div>
              <%= image_tag("bobby", :alt=> "avatar", class: "bobby") %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
