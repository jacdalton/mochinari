<h1>Categories#index</h1>
<p>Find me in app/views/categories/index.html.erb</p>
<div class="container">
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-6">
        <div class="individual-category-card" style="background-image: url('<%= asset_path category.image_path %>'); " >
          <%= link_to category.name, category_path(category) %>
        </div>
      </div>
    <% end %>
  </div>
</div>