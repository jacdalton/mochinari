<div class="container">
  <div class="col">
    <h3><%= @trail.name %></h3>
    <div class="row">
      <div class="map-container">
        <div id="map" data-markers="<%= @markers.to_json %>"></div>
      </div>
    </div>
    <div class="row mt-3">
      <h3>Snacks to Snack</h3>
    </div>
    <div class="row">
      <% @trail.snacks.each do |snack| %>
        <div class="snack-index-card">
          <%= image_tag snack.snack_images[0].image_path %>
          <div class="snack-index-card-infos">
            <div>
              <h4 class="info"> <%= snack.name %> </h4>
              <div class="stars">
                <% (snack.avg_snack_stars).times do %>
                  <i class="fas fa-star"></i>
                <% end %>
                <% (1 - snack.avg_snack_stars).times do %>
                  <i class="far fa-star"></i>
                <% end %>
              </div>
            </div>
            <%= image_tag("bobby", :alt=> "avatar", class: "bobby") %>
          </div>
          <%= link_to "", snack_path(snack), class: "snack-index-card-link" %>
        </div>
      <% end %>
    </div>
  </div>
</div>