<div class="container">
  <div class="row">
    <h2>My Trails</h2>
    <div class="new-trail-button" >
      <%= image_tag "add.svg" %>
      <p>Add New Trail</p>
    </div>
    <% @trails.each do |trail| %>
      <div class="favorite-card mt-2">
        <div class="card-product-infos">
          <div class="info-container">
            <h2> <%= link_to trail.name, trail_path(trail) %></h2>
            <%= image_tag "pink-heart.svg", class: "fixed-heart" %>
          </div>
          <p><%= trail.location %></p>
          <br>
          <div class="tags">
            <div class="row">
              <div class="tag">
                <p>tag</p>
              </div>
              <div class="tag">
                <p>tag</p>
              </div>
              <div class="tag">
                <p>tag</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
